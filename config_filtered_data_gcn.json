{
    "name": "Yoga_Score_Net_filtered_data_gcn",
    "n_gpu": 1,

    "arch": {
        "type": "GCNModel",
        "args": {
            "input_dim": 2,
            "nhid": 30,
            "num_classes": 40,
            "dropout": 0.5
        }
    },
    "data_loader": {
        "type": "YogaDataLoader",
        "args":{
            "data_csv_file": "data_loader/dataset1_filtered.csv",
            "need_img": false,
            "img_size": [244, 244],
            "color_landmark": true,
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.3,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.005,
            "weight_decay": 0.1,
            "amsgrad": true
        }
    },
    "loss": "crossentropy_loss",
    "weight_loss_lambda": 0.0,
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [200, 250],
            "gamma": 0.3
        }
    },
    "trainer": {
        "epochs": 300,

        "save_dir": "/hpctmp/e0703350/projects/yoga-saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 0,

        "tensorboard": true,

        "use_keypoints": true,
        "use_adj": true
    }
}
