{
    "name": "Yoga_Score_Net",
    "n_gpu": 1,

    "arch": {
        "type": "MobileNetModel",
        "args": {"feature_dim": 256, "num_classes": 107, "easy_margin": true, "m": 0.1}
    },
    "data_loader": {
        "type": "YogaDataLoader",
        "args":{
            "data_csv_file": "data_loader/dataset1.csv",
            "need_img": false,
            "img_size": [244, 244],
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.3,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.005,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "crossentropy_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
